<Window x:Class="AdvanceImageProcessing.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvanceImageProcessing.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Button Name="OpenFileBtn" Margin="2 2 2 2" Click="OpenFileBtn_Click" >開啟檔案</Button>
            <Button Margin="2 2 2 2">儲存檔案</Button>
            <Button Margin="2 2 2 2">順時針旋轉</Button>
            <Button Margin="2 2 2 2">逆時鐘旋轉</Button>
        </StackPanel>
        <Image Grid.Row="1" Grid.Column="0" Source="C:/Users/tiger/OneDrive/桌面/pekora.png" Margin="10 10 5 10"></Image>
        <Image Grid.Row="1" Grid.Column="1" Source="C:/Users/tiger/OneDrive/桌面/pekora.png" Margin="5 10 10 10"></Image>
    </Grid>
</Window>
